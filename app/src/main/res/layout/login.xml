<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user2"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Email ou Login"
        android:inputType="text|textEmailAddress|textPersonName"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/btnLogin4"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="172dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/bangers"
        android:text="ENTRAR"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin5"
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_rounded_facebook"
        android:fontFamily="@font/bangers"
        android:text="FACEBOOK"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <Button
        android:id="@+id/btnLogin6"
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_rounded_google"
        android:fontFamily="@font/bangers"
        android:text="GOOGLE"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</android.support.constraint.ConstraintLayout>